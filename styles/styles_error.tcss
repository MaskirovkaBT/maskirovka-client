ErrorScreen {
    align: center middle;
}

#error_container {
    grid-size: 1;
    grid-gutter: 1 2;
    grid-rows: 1fr 3;
    padding: 0 1;
    width: 60;
    height: 11;
    border: thick $background 80%;
    background: $surface;
}

#error_title {
    column-span: 2;
    height: 1fr;
    width: 1fr;
    content-align: center middle;
}

#error_ok {
    width: 100%;
    color: black;
    text-style: none;
}